#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/ext_power.h>
#include <behaviors/battery_percentage_printer.dtsi>

#define DEFAULT  0
#define NAV      1
#define SYM      2
#define FUNCTION 3
#define ADJUST   4
#define GAME     5

&led_strip {
    chain-length = <31>; // Uncomment if using both per-key and underglow LEDs
};

/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";

        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
};

/ {
    keymap {
        compatible = "zmk,keymap";

        qwerty_layer {
            bindings = <
&kp ESC         &kp Q  &kp W  &kp E         &kp R         &kp T                                                              &kp Y          &kp U               &kp I      &kp O    &kp P     &kp BSPC
&kp LEFT_SHIFT  &kp A  &kp S  &kp D         &kp F         &kp G                                                              &kp H          &kp J               &kp K      &kp L    &kp SEMI  &kp SQT
&kp LCTRL       &kp Z  &kp X  &kp C         &kp V         &kp B       &kp CAPSLOCK    &kp F24        &kp F23      &tog GAME  &kp N          &kp M               &kp COMMA  &kp DOT  &kp FSLH  &kp PRINTSCREEN
                              &kp LEFT_GUI  &kp LEFT_ALT  &kp DELETE  &kp LEFT_SHIFT  &lt NAV ENTER  &lt SYM TAB  &kp SPACE  &kp BACKSPACE  &kp K_CONTEXT_MENU  &mo 4
            >;

            // sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        navigation_layer {
            bindings = <
&trans  &kp LS(EXCL)   &kp LS(AT)     &kp LS(LBRC)  &kp LS(RBRC)  &kp LS(PIPE)                                   &kp PG_UP     &kp HOME       &kp LS(PIPE)  &kp BSLH      &kp ESC      &trans
&trans  &kp LS(POUND)  &kp LS(DLLR)   &kp LS(LPAR)  &kp LS(RPAR)  &kp GRAVE                                      &kp LS(PLUS)  &kp MINUS      &kp FSLH      &kp LS(STAR)  &kp SQT      &trans
&trans  &kp LS(PRCNT)  &kp LS(CARET)  &kp LBKT      &kp RBKT      &kp LS(TILDE)  &trans  &trans  &trans  &trans  &kp EQUAL     &kp LS(UNDER)  &kp LS(AMPS)  &trans        &kp LS(DQT)  &trans
                                      &trans        &trans        &trans         &trans  &trans  &trans  &trans  &trans        &trans         &trans
            >;

            // sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        symbol_layer {
            bindings = <
&trans  &kp N1  &kp N2      &kp N3            &kp N4      &kp N5                                             &kp N6    &kp N7    &kp N8    &kp N9     &kp N0  &trans
&trans  &trans  &kp C_PREV  &kp C_PLAY_PAUSE  &kp C_NEXT  &kp C_VOLUME_UP                                    &kp LEFT  &kp DOWN  &kp UP    &kp RIGHT  &none   &trans
&trans  &trans  &trans      &trans            &kp C_MUTE  &kp C_VOLUME_DOWN  &trans  &trans  &trans  &trans  &none     &kp LEFT  &kp DOWN  &kp RIGHT  &none   &trans
                            &trans            &trans      &trans             &trans  &trans  &trans  &trans  &trans    &trans    &trans
            >;

            // sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        function_layer {
            bindings = <
&trans  &kp F1  &kp F2   &kp F3   &kp F4   &trans                                  &kp KP_NUMLOCK  &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp KP_PLUS   &kp KP_MINUS
&trans  &kp F5  &kp F6   &kp F7   &kp F8   &trans                                  &trans          &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &kp KP_EQUAL  &kp KP_ASTERISK
&trans  &kp F9  &kp F10  &kp F11  &kp F12  &trans  &trans  &trans  &trans  &trans  &trans          &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp KP_ENTER  &kp KP_SLASH
                         &trans   &trans   &trans  &trans  &trans  &trans  &trans  &trans          &kp KP_N0        &kp KP_DOT
            >;

            // sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        adjust_layer {
            bindings = <
&bootloader  &trans  &bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2                                  &trans           &trans           &trans           &trans           &trans           &bootloader
&ext_power EP_OFF       &trans  &trans      &bt BT_SEL 3  &bt BT_SEL 4  &trans                                        &rgb_ug RGB_ON   &rgb_ug RGB_SAI  &rgb_ug RGB_HUI  &rgb_ug RGB_BRI  &rgb_ug RGB_EFF  &trans
&studio_unlock       &trans  &trans      &trans        &trans        &trans        &trans  &bapp  &bapp  &trans  &rgb_ug RGB_OFF  &rgb_ug RGB_SAD  &rgb_ug RGB_HUD  &rgb_ug RGB_BRD  &rgb_ug RGB_EFR  &trans
                                 &trans        &trans        &trans        &trans  &trans  &trans  &trans  &trans           &trans           &trans
            >;

            // sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        Game {
            bindings = <
&kp ESC    &kp Q  &kp W  &kp E     &kp R     &kp T                                                  &kp Y     &kp U      &kp I     &kp O      &kp P     &kp BSPC
&kp LSHFT  &kp A  &kp S  &kp D     &kp F     &kp G                                                  &kp LEFT  &kp DOWN   &kp UP    &kp RIGHT  &kp SEMI  &trans
&kp LCTRL  &kp Z  &kp X  &kp C     &kp V     &kp B    &trans     &trans       &trans     &trans     &kp N     &kp LEFT   &kp DOWN  &kp RIGHT  &kp FSLH  &trans
                         &kp LGUI  &kp LALT  &kp DEL  &kp SPACE  &lt 2 ENTER  &lt 1 TAB  &kp SPACE  &kp BSPC  &kp K_APP  &mo 4
            >;
        };
    };
};
